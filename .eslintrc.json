{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "error",
        "semi": "off",
        "@typescript-eslint/strict-boolean-expressions": 0,
        "@typescript-eslint/no-misused-promises": 0
    }
}
